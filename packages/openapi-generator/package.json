{
  "name": "@repo/openapi-generator",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "generate-openapi": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "openapi.yaml",
    "openapi.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/dev-watcher.ts",
    "dev:tsc": "tsc --watch",
    "clean": "rm -rf dist openapi.yaml openapi.json",
    "generate": "tsx src/cli.ts",
    "generate-openapi": "tsx src/cli.ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/shared-types": "workspace:*",
    "chokidar": "^4.0.3",
    "glob": "^11.0.3",
    "rlog-js": "^1.5.2",
    "typescript": "5.9.2",
    "yaml": "^2.8.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.3.1",
    "tsx": "^4.20.5"
  }
}
