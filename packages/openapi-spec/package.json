{
  "name": "@repo/openapi-spec",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./openapijson": "./openapijson",
    "./openapiyaml": "./openapiyaml"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "openapijson",
    "openapiyaml"
  ],
  "scripts": {
    "build": "tsc",
    "generate": "pnpm --filter @repo/openapi-generator generate && pnpm build",
    "check-types": "tsc --noEmit",
    "clean": "rm -f index.js index.d.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "typescript": "5.9.2",
    "@types/node": "^22.15.3"
  }
}
