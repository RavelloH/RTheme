{
  "name": "@repo/openapi-spec",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./openapijson": "./openapijson",
    "./openapiyaml": "./openapiyaml"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "openapijson",
    "openapiyaml"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "node src/watcher.js",
    "generate": "pnpm --filter @repo/openapi-generator generate && pnpm build",
    "check-types": "tsc --noEmit",
    "clean": "rm -f index.js index.d.ts"
  },
  "dependencies": {
    "chokidar": "^4.0.3"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.3.1",
    "chokidar-cli": "^3.0.0",
    "typescript": "5.9.2"
  }
}
